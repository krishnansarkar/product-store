@model List<Category>
<div class="card">
    <div class="card-header">
        <h2 class="text-center">Category List</h2>
    </div>
    <div class="card-body">
        <div class="row pb-3">
            <div class="text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create Category</a>
            </div>
        </div>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Display Order</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(category => category.DisplayOrder))
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.DisplayOrder</td>
                        <td><div class="btn-group w-75" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">
                                <i class="bi bi-pencil-fill"></i> Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>