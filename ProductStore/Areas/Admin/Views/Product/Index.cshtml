@model List<Product>
<div class="card">
    <div class="card-header">
        <h2 class="text-center">Product List</h2>
    </div>
    <div class="card-body">
        <div class="row pb-3">
            <div class="text-end">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">Create Product</a>
            </div>
        </div>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Properties</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Title</td>
                        <td><table class="table">
                            <tr><td style="w-50">ISBN:</td><td>@obj.ISBN</td></tr>
                            <tr><td>Author</td><td>@obj.Author</td></tr>
                            <tr><td>Price(1-49)</td><td>@obj.Price.ToString("C")</td></tr>
                            <tr><td>Price(50-99)</td><td>@obj.Price50.ToString("C")</td></tr>
                            <tr><td>Price(100+)</td><td>@obj.Price100.ToString("C")</td></tr>
                            <tr><td>Description</td><td>@obj.Description</td></tr>
                        </table></td>
                        <td><div class="btn-group w-75" role="group">
                            <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary">
                                <i class="bi bi-pencil-fill"></i> Edit
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>