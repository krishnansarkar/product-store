@model IEnumerable<Product>

<div class="row">
    @foreach(var item in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" style="height: 300px; object-fit: cover;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-center mb-0">@item.Title</h5>
                    <h5 class="card-title text-center mb-2">by @item.Author</h5>
                    <p class="text-center mb-0">Price: @item.Price.ToString("c")</p>
                    <p class="text-center mb-0">As Low As: @item.Price100.ToString("c")</p>
                </div>
            </div>
        </div>
    }
</div>
