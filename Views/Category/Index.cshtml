@model List<Category>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            Category List
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create Category</a>
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Category</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(category => category.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td><div class="btn-group w-75" role="group">
                        <a asp-controller="Category" asp-action="Edit" class="btn btn-primary">
                            <i class="bi bi-pencil-fill"></i> Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div></td>
                </tr>
            }
        </tbody>
    </table>
</div>