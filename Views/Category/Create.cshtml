@model Category
<div class="container">
    <form method="post">
        <div class="border p-3">
            <div class="row pb-2">
                <h2>Create Category</h2>
                <hr/>
            </div>
            <div class="mb-3">
                <label asp-for="Name" class="pb-1"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DisplayOrder" class="pb-1"></label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Create Category</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Return to Category List</a>
                </div>
            </div>
        </div>
    </form>
</div>