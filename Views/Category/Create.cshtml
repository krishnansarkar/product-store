<div class="container">
    <form>
        <div class="border p-3">
            <div class="row pb-2">
                <h2>Create Category</h2>
                <hr/>
            </div>
            <div class="mb-3">
                <label class="pb-1">Category Name</label>
                <input type="text" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="pb-1">Display Order</label>
                <input type="text" class="form-control" />
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Create Category</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Return to Category List</a>
                </div>
            </div>
        </div>
    </form>
</div>